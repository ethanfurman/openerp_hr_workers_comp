!!!xml1.0

-duty_type = 'hr.workers_comp.duty_type'
-partner_type = 'sample.partner_type'

~openerp
    ~data noupdate='0'

        ~record model=duty_type #employee_returned_to_work
            @name: Returned to work
            @active eval='True'

        ~record model=duty_type #full_restriction
            @name: Complete Restriction
            @active eval='True'

        ~record model=duty_type #restriction_office_work_only
            @name: Office work only
            @active eval='True'

        ~record model=duty_type #restriction_no_driving
            @name: No driving
            @active eval='True'

        ~record model=duty_type #restriction_left_hand
            @name: No use of left hand
            @active eval='True'

        ~record model=duty_type #restriction_right_hand
            @name: No use of right hand
            @active eval='True'

        ~record model=duty_type #restriction_five
            @name: No Lifting over 05 pounds
            @active eval='True'

        ~record model=duty_type #restriction_ten
            @name: No Lifting over 10 pounds
            @active eval='True'

        ~record model=duty_type #restriction_fifteen
            @name: No Lifting over 15 pounds
            @active eval='True'

        ~record model=duty_type #restriction_twenty
            @name: No Lifting over 20 pounds
            @active eval='True'

        ~record model=duty_type #restriction_twentyfive
            @name: No Lifting over 25 pounds
            @active eval='True'

        ~record model=duty_type #restriction_pushing
            @name: No pushing / pulling
            @active eval='True'

        ~record model=duty_type #restriction_sitting
            @name: No repetitive sitting / standing
            @active eval='True'

        ~record model=duty_type #employee_quit
            @name: No longer an employee - Employee Quit
            @active eval='True'

        ~record model=duty_type #employee_fired
            @name: No longer an employee - Employee Terminated
            @active eval='True'

        ~record model=duty_type #employee_settled
            @name: No longer an employee - Settlement Paid
            @active eval='True'

        ~record model=duty_type #employee_cleared_to_work
            @name: Medically cleared of all restrictions
            @active eval='True'

        ~record model=duty_type #est_light_duty
            @name: Light duty restrictions
            @active eval='True'

        ~record model=duty_type #est_cleared
            @name: All restrictions cleared
            @active eval='True'

        ~record model=duty_type #incomplete
            @name: INCOMPLETE
            @active eval='True'
